<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="entity"
            type="com.evren.repository.model.entities.university.detail.MajorDetail" />
    </data>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:layout_toStartOf="@+id/txtDepartmentType"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/txtDepartmentName"
        android:text="@{entity.name}"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
        android:id="@+id/txtDepartmentType"
        android:text="@{entity.schoolType}"/>
</RelativeLayout>
</layout>