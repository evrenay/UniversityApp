<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="entity"
            type="com.evren.repository.model.entities.university.UniversityEntityItem" />
    </data>
<androidx.cardview.widget.CardView
    app:cardElevation="3dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="10dp"
    android:layout_width="match_parent"
    android:layout_height="96dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUni"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@{entity.url}"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_centerVertical="true"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_toStartOf="@+id/imgGoDetail"
    android:layout_toEndOf="@+id/imgUni">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtUniName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/black"
        android:ellipsize="end"
        android:text="@{entity.name}" />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/txtUniName"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="@{entity.shortDetail}" />
</RelativeLayout>
    <ImageView
        android:id="@+id/imgGoDetail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:tint="@android:color/darker_gray"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_next" />
</RelativeLayout>
</androidx.cardview.widget.CardView>
</layout>